{
    "name": "sterzik/expression",
    "description": "Custom user-defined syntax expression parsing library",
    "license": "MIT",
    "homepage": "https://github.com/marek-sterzik/expression",
    "type": "library",
    "authors": [
        {
            "name": "Marek Sterzik",
            "email": "marek.sterzik@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "phpmd/phpmd": ">=2.6",
        "phpstan/phpstan": ">=0.8.5",
        "phpunit/phpunit": ">=7.4",
        "slevomat/coding-standard": ">=4.6",
        "squizlabs/php_codesniffer": ">=3.0"
    },
    "autoload" : {
        "psr-4": {
            "Sterzik\\Expression\\": "src"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
